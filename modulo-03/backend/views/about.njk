{% extends "layout.njk" %}

{% block header %}
<title>Mike Brito -  About</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <img src="{{about.avatar_url}}" alt="Myke Brito">
        <h1>{{about.name}}</h1>
        <h2>{{about.occupation}}</h2>
        <p>{{about.bio}} </p>
    </div>

    <div id="links-footer" class="links">
      {% for redesocial in about.link %}
        <a href="{{ redesocial.url }}" target="_blank">{{redesocial.name}}</a>

        {% endfor %}
    </div>
    
    {% endblock %}